<AnchorPane prefHeight="700.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="utc2.itk62.store.controllers.CategoryController">
   <children>
      <VBox alignment="CENTER" layoutX="-5.0" prefHeight="700.0" prefWidth="1200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER">
               <children>
                  <FontAwesomeIconView fill="#0b6318" glyphName="LIST_ALT" size="1em" text="">
                     <font>
                        <Font size="28.0" />
                     </font>
                  </FontAwesomeIconView>
                  <Label text="QUẢN LÍ DANH MỤC">
                     <font>
                        <Font name="System Bold Italic" size="20.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="20.0" top="20.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" prefHeight="48.0" prefWidth="1199.0">
               <children>
                  <Label prefHeight="26.0" prefWidth="175.0" text="Mã danh mục:">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  <TextField fx:id="idCategory" prefHeight="26.0" prefWidth="450.0" />
               </children>
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Label prefHeight="26.0" prefWidth="175.0" text="Tên danh mục:">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  <TextField fx:id="nameCategory" prefHeight="26.0" prefWidth="450.0" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Button id="shiny_r" fx:id="btnAddCategory" mnemonicParsing="false" prefHeight="26.0" prefWidth="101.0" stylesheets="@../css/stylesheet.css" text="     Add">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
                  <Button id="shiny_r" fx:id="btnUpdateCategory" mnemonicParsing="false" prefHeight="26.0" prefWidth="119.0" stylesheets="@../css/stylesheet.css" text="Update">
                     <HBox.margin>
                        <Insets left="20.0" right="20.0" />
                     </HBox.margin>
                  </Button>
                  <Button id="sale" fx:id="btnDeleteCategory" mnemonicParsing="false" prefHeight="26.0" prefWidth="119.0" stylesheets="@../css/stylesheet.css" text="Delete">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Label text="Tim kiem:">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  <TextField fx:id="searchValue" prefWidth="250.0" style="-fx-border-color: #077b34;">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </TextField>
                  <ComboBox id="bevel" fx:id="keySearch" prefWidth="150.0" stylesheets="@../css/stylesheet.css">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </ComboBox>
                  <Button id="shiny_r" fx:id="btnExportExcel" mnemonicParsing="false" prefHeight="26.0" prefWidth="137.0" stylesheets="@../css/stylesheet.css" text="  Export excel" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
            </HBox>
            <Label text="Danh sách category">
               <font>
                  <Font name="Arial Bold" size="18.0" />
               </font>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </Label>
            <TableView fx:id="tableListCategory" prefHeight="200.0" prefWidth="200.0">
              <columns>
                <TableColumn fx:id="colSttCategory" prefWidth="100.0" text="STT" />
                <TableColumn fx:id="colIdCategory" prefWidth="100.0" text="ID" />
                  <TableColumn fx:id="colNameCategory" prefWidth="300.0" text="Name" />
                  <TableColumn fx:id="colStatusCategory" prefWidth="100.0" text="Status" />
                  <TableColumn fx:id="colCreatedAtCategory" prefWidth="300.0" text="Created At" />
                  <TableColumn fx:id="colUpdatedAtCategory" prefWidth="300.0" text="Updated At" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <Label text="Danh sách product trong category">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <TableView fx:id="tableListProduct" prefHeight="200.0" prefWidth="200.0">
              <columns>
                <TableColumn fx:id="colSTTProduct" prefWidth="75.0" text="STT" />
                <TableColumn fx:id="colSupplierProduct" prefWidth="75.0" text="Supplier" />
                  <TableColumn fx:id="colNameProduct" prefWidth="75.0" text="Name" />
                  <TableColumn fx:id="colQuantity" prefWidth="75.0" text="Quantity" />
                  <TableColumn fx:id="colDescProduct" prefWidth="75.0" text="Desc" />
