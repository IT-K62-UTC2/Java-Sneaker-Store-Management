<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="utc2.itk62.store.controllers.CustomerController">
   <children>
      <VBox prefHeight="700.0" prefWidth="1200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label text="QUẢN LÍ KHÁCH HÀNG" />
            <HBox>
               <children>
                  <Label text="ID" />
                  <TextField fx:id="id" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label text="Họ tên" />
                  <TextField fx:id="name" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label text="Địa chỉ" />
                  <TextField fx:id="address" />
               </children>
            </HBox>
            <HBox>
               <children>
                   <Label text="Email" />
                   <TextField fx:id="email" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label text="Số điện thoại" />
                  <TextField fx:id="phoneNumber" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label text="CCCD" />
                  <TextField fx:id="cccd" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label text="Giới tính" />
                  <RadioButton fx:id="btnMale" mnemonicParsing="false" text="Male" />
                  <RadioButton fx:id="btnFemale" mnemonicParsing="false" text="Femle" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <Button fx:id="btnAdd" mnemonicParsing="false" text="Add" />
                  <Button fx:id="btnUpdate" mnemonicParsing="false" text="Update" />
                  <Button fx:id="btnDelete" mnemonicParsing="false" text="Delete" />
                  <Button fx:id="btnExportExcel" mnemonicParsing="false" text="Export excel" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label text="Tìm kiếm" />
                  <TextField fx:id="searchValue" />
                  <ComboBox fx:id="keySearch" prefWidth="150.0" />
               </children>
            </HBox>
            <TableView fx:id="tableListCustomer" prefHeight="200.0" prefWidth="200.0">
              <columns>
                <TableColumn fx:id="stt" prefWidth="75.0" text="STT" />
                  <TableColumn fx:id="colId" prefWidth="75.0" text="Mã khách hàng" />
                  <TableColumn fx:id="colName" prefWidth="75.0" text="Họ tên" />
                  <TableColumn fx:id="colAddress" prefWidth="75.0" text="Địa chỉ" />
                  <TableColumn fx:id="colEmail" prefWidth="75.0" text="Email" />    
                  <TableColumn fx:id="colPhoneNumber" prefWidth="75.0" text="Số điện thoại" />
                  <TableColumn fx:id="colCccd" prefWidth="75.0" text="CCCD" />
                  <TableColumn fx:id="colGender" prefWidth="75.0" text="Giới tính" />
                  <TableColumn fx:id="colStatus" prefWidth="75.0" text="Trạng thái" />
                  <TableColumn fx:id="colCreatedAt" prefWidth="75.0" text="Ngày tạo" />
                  <TableColumn fx:id="colUpdatedAt" prefWidth="75.0" text="Ngày cập nhật" />
              </columns>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>
